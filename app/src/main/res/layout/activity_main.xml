<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ayberkogram"
        android:textStyle="bold"
        android:textSize="75sp"
        android:fontFamily="@font/always_forever"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <EditText
        android:id="@+id/usernameEdt"
        android:layout_width="0dp"
        android:hint="Username"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/loginTxt"
        app:layout_constraintStart_toStartOf="@id/loginTxt"
        app:layout_constraintEnd_toEndOf="@id/loginTxt"
        />

    <EditText
        android:id="@+id/passwdEdt"
        android:layout_width="0dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/usernameEdt"
        app:layout_constraintStart_toStartOf="@id/loginTxt"
        app:layout_constraintEnd_toEndOf="@id/loginTxt"
        />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:background="@drawable/button_bg_transparent"
        android:text="Log In"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/passwdEdt"
        app:layout_constraintStart_toStartOf="@id/loginTxt"
        app:layout_constraintEnd_toEndOf="@id/loginTxt"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/frgtPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        app:layout_constraintStart_toStartOf="@id/loginTxt"
        app:layout_constraintEnd_toEndOf="@id/loginTxt"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_bg_transparent2"
        android:backgroundTint="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>