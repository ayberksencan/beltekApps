<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notGiris">

    <TextView
        android:id="@+id/notGirisTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:text="Öğrencinin girilen notlarına göre not ortalaması hesaplanır ve harf notu bulunur."
        android:fontFamily="@font/source_sans_pro_black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/notOrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Ortalaması Aralığı"
        app:layout_constraintTop_toBottomOf="@id/notGirisTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/harfNotu"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/harfNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notGirisTxt"
        android:layout_marginTop="15dp"
        android:text="Harf Notu"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sifirYirmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/notOrt"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/notOrt"
        android:text="0-20"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/yirmiKirk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sifirYirmi"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/notOrt"
        android:text="21-40"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/kirkAltmis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/yirmiKirk"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/notOrt"
        android:text="41-60"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/altmisSeksen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kirkAltmis"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/notOrt"
        android:text="61-80"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/seksenYuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/altmisSeksen"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/notOrt"
        android:text="81-100"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/harfNotu"
        app:layout_constraintStart_toStartOf="@id/harfNotu"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        android:text="FF"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ff"
        app:layout_constraintStart_toStartOf="@id/harfNotu"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        android:text="DD"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dd"
        app:layout_constraintStart_toStartOf="@id/harfNotu"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        android:text="CC"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cc"
        app:layout_constraintStart_toStartOf="@id/harfNotu"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        android:text="BB"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bb"
        app:layout_constraintStart_toStartOf="@id/harfNotu"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        android:text="AA"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/ilkNot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/seksenYuz"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginTop="25dp"
        android:hint="Vize Notu"
        android:inputType="number"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/ikinciNot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ilkNot"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginTop="25dp"
        android:hint="Final Notu"
        android:inputType="number"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/notHesapla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/yale_blue"
        android:textColor="@color/ghost_white"
        android:text="Harf Notu Hesapla"
        app:layout_constraintEnd_toEndOf="@id/harfNotu"
        app:layout_constraintStart_toStartOf="@id/notOrt"
        app:layout_constraintTop_toBottomOf="@id/ikinciNot"
        android:layout_marginTop="45dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>