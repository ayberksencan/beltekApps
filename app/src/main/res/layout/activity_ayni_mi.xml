<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayniMi">

    <TextView
        android:id="@+id/ayniMiTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backToMainImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Verilen iki sayının aynı olma durumu karşılaştırılır."
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.6"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/source_sans_pro_black"
        android:textColor="@color/eerie_black"
        />

    <EditText
        android:id="@+id/ilkSayi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ayniMiTxt"
        app:layout_constraintStart_toStartOf="@id/ayniMiTxt"
        app:layout_constraintEnd_toEndOf="@id/ayniMiTxt"
        android:layout_marginTop="50dp"
        android:hint="İlk Sayı"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/ikinciSayi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ilkSayi"
        app:layout_constraintStart_toStartOf="@id/ilkSayi"
        app:layout_constraintEnd_toEndOf="@id/ilkSayi"
        android:layout_marginTop="50dp"
        android:hint="İkinci Sayı"
        android:inputType="number"
        />

    <Button
        android:id="@+id/ayniMiBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ikinciSayi"
        app:layout_constraintStart_toStartOf="@id/ikinciSayi"
        app:layout_constraintEnd_toEndOf="@id/ikinciSayi"
        android:layout_marginTop="50dp"
        app:layout_constraintHeight_percent="0.07"
        android:text="Hesapla"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/maroon_x"
        />



    <Button
        android:id="@+id/backToMainImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.20"
        android:background="@drawable/home"
        android:backgroundTint="@color/rajah"
        />

</androidx.constraintlayout.widget.ConstraintLayout>